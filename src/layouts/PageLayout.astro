---
import BaseHead from '../components/BaseHead.astro';
import NavBar from '../components/NavBar.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { ViewTransitions } from "astro:transitions";
import { SITE_TITLE, SITE_DESCRIPTION, MQ_MOBILE_WIDTH} from '../consts';
---

<!doctype html>
<html lang="en" transition:animate="none">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image='./husky.jpg' />
		<ViewTransitions />
	</head>
	<body class="theme-dark">
        <div id="nav-layout">
            <NavBar />
            <div id="page-layout">
                <img src='./blog-placeholder-1.jpg' />
                <main>
                    <slot />
                </main>
                <Footer />
            </div>
        </div>
    </body>
</html>

<style>
    #nav-layout {
        display: flex;
        flex-direction: column;
    }
    #page-layout {
        display: grid;
        grid-template-rows: auto 1fr auto;
        width: 100%;
        min-height: 100vh;
    }
    /* DESKTOP */
	@media (min-width: 992px) {
        #nav-layout {
            flex-direction: row;
        }
    }
    
</style>
