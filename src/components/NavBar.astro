---
import NavLink from './NavLink.astro';
import ButtonTheme from './ButtonTheme.astro';
---

<nav>
	<div id="nav-left">
		<a href="/">
			<img src="secretary-bird-sq.jpg" aria-label="Navbar Icon" />
		</a>
	</div>
	<div id="nav-right">
		<NavLink href="/">Home</NavLink>
		<NavLink href="/blog">Blog</NavLink>
		<NavLink href="/gallery">Gallery</NavLink>
		<ButtonTheme label="Moon"></ButtonTheme>
	</div>
</nav>

<style>
	
	/* MOBILE */
	nav {
		display: flex;
		flex-direction: row;
		align-items: stretch;
		justify-content: space-between;
		padding: 0 0 0 1em; /* top, right, bottom, left */
		gap: 1em;
		z-index: 3;
		background-color: var(--color-nav);

		/* Position and Size */
		width: 100%;
		height: fit-content;
		position: fixed;
		top: 0;
	}
	#nav-left {
		font-size: 0;
		align-self: center;
		img { 
			width: 32px;
			border-radius: 50%;
			border-style: none;
		 }
	}
	#nav-right {
		display: inherit;
		flex-direction: inherit;
		align-items: inherit;
	}

	/* DESKTOP */
	@media (min-width: 992px) {
		nav {
			flex-direction: column;
			align-items: center;
			justify-content: start;
			padding: 1em 0 1em 0; /* top, right, bottom, left */

			/* Position and Size */
			width: auto;
			height: auto;
			position: static;
		}

		#nav-left {
			img {
				width: 128px;
			}
		}
	}
</style>